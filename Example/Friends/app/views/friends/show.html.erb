

<div class="bg-light p-4 rounded-lg m-3">
  <h1 class="display-4"><%= @friend.first_name %> <%= @friend.last_name %></h1>
  <p class="lead"><%= @friend.email %> | <%= @friend.phone %> | <%= @friend.twitter %></p>
  <hr class="my-4">
  <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %> 
  <%= link_to "Back to friends", friends_path, class:"btn btn-secondary" %>

</div>

<div> 
  
  <%= button_to "Destroy this friend", @friend, method: :delete, class:"btn btn-secondary mt-3" %>
</div>
