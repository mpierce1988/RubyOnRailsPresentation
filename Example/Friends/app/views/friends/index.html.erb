<% if(@friends.count == 0) %>
  <p>No friends to display</p>
<% else %>
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>   
        <th colspan="3"></th>
      </tr>   
    </thead>
    <tbody>
      <% @friends.each do |item| %>
        <tr>
          <td><%= item.first_name %></td>
          <td><%= item.last_name %></td>
          <td><%= item.email %></td>
          <td><%= item.phone %></td>
          <td><%= item.twitter %></td>
          <td><%= link_to 'Show', friend_path(item) %></td>
          <td><%= link_to 'Edit', edit_friend_path(item) %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?'} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end -%>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
